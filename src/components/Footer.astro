---
const adventureLinks = [
  { label: "Descenso del Sella", href: "/descenso-del-sella" },
  { label: "Barranquismo", href: "/barranquismo" },
  { label: "Lagos de Covadonga", href: "/visita-lagos" },
  { label: "Packs", href: "/packs" },
  { label: "Descenso en Grupo", href: "/descenso-en-grupo" },
];

const companyLinks = [
  { label: "Novedades", href: "/novedades" },
  { label: "Contacto", href: "/contacto" },
  { label: "Iniciativa #RiosLimpios", href: "/iniciativa-rioslimpios" },
];

const legalLinks = [
  { label: "Politica de Privacidad", href: "/politica-de-privacidad" },
  { label: "Politica de Cookies", href: "/politica-de-cookies" },
  { label: "Aviso Legal", href: "/aviso-legal" },
];

const socialLinks = [
  {
    label: "Instagram",
    href: "https://www.instagram.com/rumbonorteasturias/",
    icon: "photo_camera",
  },
  {
    label: "Facebook",
    href: "https://www.facebook.com/profile.php?id=100063597999122",
    icon: "facebook",
  },
  {
    label: "YouTube",
    href: "https://www.youtube.com/channel/UCi90tzlpNp68KmEAFIc7MIA",
    icon: "play_circle",
  },
];

const badges = [
  { icon: "accessible", text: "Instalaciones accesibles" },
  { icon: "pets", text: "Pet Friendly" },
  { icon: "verified_user", text: "Seguros R.C. y accidentes" },
  { icon: "energy_savings_leaf", text: "Energias renovables" },
];
---

<!-- Trust badges -->
<section class="bg-stone-gray py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {
        badges.map((badge) => (
          <div class="flex flex-col items-center text-center gap-3">
            <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
              <span class="material-icons text-primary">{badge.icon}</span>
            </div>
            <span class="text-sm font-bold uppercase tracking-wide text-gray-700">
              {badge.text}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</section>

<footer class="bg-forest-dark text-white pt-16 pb-8 border-t-8 border-primary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 mb-12">
      <!-- Brand + contact -->
      <div class="md:col-span-4">
        <a href="/" class="flex items-center space-x-2 mb-6">
          <div
            class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center transform -rotate-6"
          >
            <span class="material-icons text-black font-bold text-sm"
              >terrain</span
            >
          </div>
          <span class="text-xl font-bold uppercase"
            >Rumbo<span class="text-primary">Norte</span></span
          >
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          Empresa de turismo activo en Asturias. Descenso del Sella,
          barranquismo, visita a los Lagos de Covadonga y mucho mas.
        </p>
        <div class="space-y-3">
          <a
            href="mailto:info@rumbonorteasturias.com"
            class="flex items-center gap-3 text-sm text-gray-300 hover:text-primary transition-colors"
          >
            <div class="bg-primary/20 p-2 rounded-lg">
              <span class="material-icons text-primary text-sm">email</span>
            </div>
            info@rumbonorteasturias.com
          </a>
          <a
            href="tel:+34648951599"
            class="flex items-center gap-3 text-sm text-gray-300 hover:text-primary transition-colors"
          >
            <div class="bg-primary/20 p-2 rounded-lg">
              <span class="material-icons text-primary text-sm">phone</span>
            </div>
            648 951 599 / 985 840 693
          </a>
          <div class="flex items-center gap-3 text-sm text-gray-300">
            <div class="bg-primary/20 p-2 rounded-lg">
              <span class="material-icons text-primary text-sm">place</span>
            </div>
            C/ Inocencio del Valle 3, 33540 Arriondas, Asturias
          </div>
        </div>
      </div>

      <!-- Adventures -->
      <div class="md:col-span-3">
        <h4
          class="font-bold text-primary mb-6 uppercase tracking-widest text-sm"
        >
          Aventuras
        </h4>
        <ul class="space-y-3 text-sm text-gray-300">
          {
            adventureLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Company -->
      <div class="md:col-span-2">
        <h4
          class="font-bold text-primary mb-6 uppercase tracking-widest text-sm"
        >
          Empresa
        </h4>
        <ul class="space-y-3 text-sm text-gray-300">
          {
            companyLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social -->
      <div class="md:col-span-3">
        <h4
          class="font-bold text-primary mb-6 uppercase tracking-widest text-sm"
        >
          Siguenos
        </h4>
        <div class="flex gap-3">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={link.label}
                class="w-10 h-10 rounded-full border border-gray-700 flex items-center justify-center hover:bg-primary hover:border-primary hover:text-black transition-colors text-white"
              >
                <span class="material-icons text-sm">{link.icon}</span>
              </a>
            ))
          }
          <a
            href="https://www.tripadvisor.es/Attraction_Review-g608995-d16826751-Reviews-Rumbo_Norte_Asturias-Arriondas_Parres_Municipality_Asturias.html"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Tripadvisor"
            class="w-10 h-10 rounded-full border border-gray-700 flex items-center justify-center hover:bg-primary hover:border-primary hover:text-black transition-colors text-white"
          >
            <span class="material-icons text-sm">travel_explore</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-xs text-gray-500 gap-4"
    >
      <p>&copy; {new Date().getFullYear()} Rumbo Norte Asturias. Todos los derechos reservados.</p>
      <div class="flex space-x-6">
        {
          legalLinks.map((link) => (
            <a href={link.href} class="hover:text-white transition-colors">
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
