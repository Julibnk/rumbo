---
import Base from "../layouts/Base.astro";
import HeroSection from "../components/HeroSection.astro";
import TechSpecs from "../components/TechSpecs.astro";
import PricingTable from "../components/PricingTable.astro";
import FAQ from "../components/FAQ.astro";
import { Image } from "astro:assets";

import gruposImg from "../assets/images/actividades/grupos.webp";
import viajesImg from "../assets/images/actividades/viajes-estudios.webp";

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const specs = [
  { icon: "groups", label: "Grupo minimo", value: "+11 personas" },
  { icon: "schedule", label: "Duracion", value: "4 - 4.5 horas" },
  { icon: "straighten", label: "Distancia", value: "15 km (Arriondas - Llovio)" },
  { icon: "signal_cellular_alt", label: "Dificultad", value: "Baja / Para todos" },
  { icon: "payments", label: "Precio desde", value: "20€ / persona" },
];

const pricing = [
  {
    name: "Adultos",
    details: "Precio por persona (grupo +11 personas)",
    price: "30€ / persona",
  },
  {
    name: "Ninos (menores de 15)",
    details: "Tarifa reducida para menores",
    price: "20€ / persona",
  },
  {
    name: "Suplemento picnic",
    details: "Opcional",
    price: "+5€ / persona",
  },
];

const incluye = [
  "Todo el material necesario para la actividad",
  "Bolsa estanca para pertenencias personales",
  "Taquillas individuales (segun disponibilidad)",
  "Traje de neopreno gratuito (bajo peticion)",
  "Acceso ilimitado a vestuarios, aseos y duchas",
  "Transporte de vuelta a las instalaciones",
  "Seguro de Responsabilidad Civil y Accidentes",
];

const viajesActividades = [
  {
    icon: "kayaking",
    title: "Descenso del Sella",
    description: "Guiado por monitores titulados, con paisajes impresionantes de los Picos de Europa.",
  },
  {
    icon: "landscape",
    title: "Lagos de Covadonga",
    description: "Incluye trekking guiado por la naturaleza en un entorno paradisiaco.",
  },
  {
    icon: "terrain",
    title: "Barranquismo",
    description: "Actividad de aventura salvaje adaptada para todas las edades.",
  },
];

const faqItems = [
  {
    question: "Cuantas personas hacen falta para ser grupo?",
    answer:
      "A partir de 11 personas se aplica la tarifa de grupo con precios reducidos.",
  },
  {
    question: "Podemos hacer la actividad con ninos?",
    answer:
      "Si. No hay restriccion de edad; la altura minima es 1.15 metros. Los ninos menores de 15 anos tienen tarifa reducida.",
  },
  {
    question: "Que incluye el suplemento picnic?",
    answer:
      "El suplemento de picnic incluye comida y bebida para reponer fuerzas durante el descenso.",
  },
  {
    question: "Como reservo para un viaje de estudios?",
    answer:
      "Contacta con nosotros por telefono o email para recibir un presupuesto personalizado. Los profesores acompanantes entran gratis.",
  },
];
---

<Base
  title="Grupos y Viajes de Estudios"
  description="Descenso del Sella en grupo desde 20€/persona. Cumpleanos, eventos de empresa y viajes de estudios. Desde 11 personas con todo incluido."
>
  <!-- Hero -->
  <HeroSection
    variant="split"
    title="DESCENSO DEL SELLA"
    titleAccent="EN GRUPO"
    subtitle="Cumpleanos, eventos, viajes de estudios... baja el Sella con tu grupo."
    image={gruposImg.src}
    imageAlt="Grupo de amigos descendiendo el Sella en canoa"
    ctaText="Pide presupuesto"
    ctaHref={`tel:+34648951599`}
  />

  <!-- Description + Tech Specs -->
  <section class="py-24 bg-background-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
        <div class="lg:col-span-7 space-y-6">
          <span
            class="text-primary font-bold tracking-widest uppercase text-sm"
          >La experiencia en grupo</span>
          <h2 class="text-4xl md:text-5xl font-bold leading-tight">
            LA MEJOR FORMA DE <br />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-forest-dark"
            >
              CELEBRAR JUNTOS
            </span>
          </h2>
          <p class="text-xl text-gray-600 font-light leading-relaxed">
            Cumpleanos, eventos de empresa, viajes de estudios... baja el Sella con nosotros para disfrutar con todos tus amigos de una experiencia inolvidable. A partir de 11 personas, precios especiales de grupo con todo incluido.
          </p>
          <p class="text-lg text-gray-600 italic border-l-4 border-primary pl-4 mt-6">
            Nos encargamos de toda la logistica para que vosotros solo os preocupeis de pasarlo genial.
          </p>
        </div>
        <div class="lg:col-span-5">
          <TechSpecs title="Informacion rapida" specs={specs} />
        </div>
      </div>
    </div>
  </section>

  <!-- Viajes de Estudios -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Imagen -->
        <div class="relative scroll-animate" data-animation="fadeInLeft">
          <div class="rounded-2xl overflow-hidden shadow-xl">
            <Image
              src={viajesImg}
              alt="Viaje de estudios con actividades al aire libre en Asturias"
              class="w-full h-[400px] lg:h-[500px] object-cover"
              widths={[400, 800]}
              sizes="(max-width: 1024px) 100vw, 50vw"
            />
          </div>
        </div>

        <!-- Contenido -->
        <div class="space-y-6 scroll-animate" data-animation="fadeInRight">
          <span class="text-primary font-bold tracking-widest uppercase text-sm">
            Viajes de estudios
          </span>
          <h2 class="text-4xl md:text-5xl font-bold leading-tight">
            AVENTURAS <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-forest-dark">
              EDUCATIVAS
            </span>
          </h2>
          <p class="text-xl text-gray-600 font-light leading-relaxed">
            Programas de viajes de fin de curso enfocados en experiencias grupales que fortalecen los vinculos entre participantes. Diversion y aprendizaje en plena naturaleza asturiana.
          </p>

          <!-- Actividades como lista simple -->
          <div class="flex flex-wrap gap-x-6 gap-y-2 text-gray-700 font-medium">
            <span class="flex items-center gap-2">
              <span class="material-icons text-gray-400 text-lg">kayaking</span>
              Descenso del Sella
            </span>
            <span class="flex items-center gap-2">
              <span class="material-icons text-gray-400 text-lg">landscape</span>
              Lagos de Covadonga
            </span>
            <span class="flex items-center gap-2">
              <span class="material-icons text-gray-400 text-lg">terrain</span>
              Barranquismo
            </span>
          </div>

          <!-- Caracteristicas -->
          <div class="flex flex-wrap gap-3 pt-2">
            <span class="inline-flex items-center gap-1.5 bg-background-light text-gray-700 px-4 py-2 rounded-full text-sm font-medium border border-gray-200">
              <span class="material-icons text-gray-500 text-base">school</span>
              Profesores gratis
            </span>
            <span class="inline-flex items-center gap-1.5 bg-background-light text-gray-700 px-4 py-2 rounded-full text-sm font-medium border border-gray-200">
              <span class="material-icons text-gray-500 text-base">accessible</span>
              Accesible
            </span>
            <span class="inline-flex items-center gap-1.5 bg-background-light text-gray-700 px-4 py-2 rounded-full text-sm font-medium border border-gray-200">
              <span class="material-icons text-gray-500 text-base">verified_user</span>
              Seguro incluido
            </span>
          </div>

          <a
            href={`${base}/contacto`}
            class="inline-block bg-gray-900 hover:bg-primary text-white hover:text-black font-bold px-8 py-4 rounded-xl border-2 border-gray-900 hover:border-black uppercase tracking-widest transition-all hover:-translate-y-0.5"
          >
            Pide tu presupuesto
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Tipos de grupo -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="mb-12">
        <h2 class="text-4xl font-bold uppercase">Tambien perfecto para...</h2>
        <div class="w-20 h-1.5 bg-primary mt-4"></div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
        <div class="bg-background-light p-8 rounded-2xl border-2 border-primary/20 hover:border-primary/40 transition-colors scroll-animate" data-animation="fadeInUp" data-delay="100">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center">
              <span class="material-icons text-primary text-2xl">cake</span>
            </div>
            <h3 class="text-2xl font-bold">Cumpleanos</h3>
          </div>
          <p class="text-gray-600">Celebra tu dia por todo lo alto con una aventura inolvidable en el Sella.</p>
        </div>
        <div class="bg-background-light p-8 rounded-2xl border-2 border-primary/20 hover:border-primary/40 transition-colors scroll-animate" data-animation="fadeInUp" data-delay="200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center">
              <span class="material-icons text-primary text-2xl">business</span>
            </div>
            <h3 class="text-2xl font-bold">Empresas</h3>
          </div>
          <p class="text-gray-600">Team building diferente: fortalece el equipo mientras disfrutais de la naturaleza asturiana.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <PricingTable title="Tarifas de grupo (+11 personas)" rows={pricing} />

  <!-- Que incluye -->
  <section class="py-20 bg-background-light">
    <div class="max-w-7xl mx-auto px-4">
      <div class="mb-12">
        <h2 class="text-4xl font-bold uppercase">Que incluye</h2>
        <div class="w-20 h-1.5 bg-primary mt-4"></div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {incluye.map((item, i) => (
          <div
            class:list={[
              "flex items-center gap-3 bg-white p-4 rounded-lg scroll-animate",
              i === incluye.length - 1 && "col-span-full lg:col-span-3",
            ]}
            data-animation="fadeInUp"
            data-delay={`${Math.min((i + 1) * 100, 300)}`}
          >
            <span class="material-icons text-primary">check_circle</span>
            <span class="font-medium">{item}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-24 bg-background-light">
    <div class="max-w-3xl mx-auto px-4">
      <FAQ title="Preguntas frecuentes" items={faqItems} />
    </div>
  </section>
</Base>
