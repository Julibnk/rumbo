const specs = [
  { icon: "schedule", label: "Duracion", value: "Aprox. 4 horas" },
  { icon: "signal_cellular_alt", label: "Niveles", value: "4 niveles de dificultad" },
  { icon: "person_add", label: "Edad minima", value: "A partir de 6 anos" },
