---
import Base from "../layouts/Base.astro";
import HeroSection from "../components/HeroSection.astro";
import TechSpecs from "../components/TechSpecs.astro";
import CTABanner from "../components/CTABanner.astro";
import PricingTable from "../components/PricingTable.astro";
import ImageCarousel from "../components/ImageCarousel.astro";
import Schedule from "../components/Schedule.astro";
import FAQ from "../components/FAQ.astro";

// Importar imágenes locales de alta calidad
import barranquismo1 from "../assets/images/actividades/barranquismo-1.webp";
import barranquismo2 from "../assets/images/actividades/barranquismo-2.webp";
import barranquismo3 from "../assets/images/actividades/barranquismo-3.webp";
import barranquismo4 from "../assets/images/actividades/barranquismo-4.webp";
